{% block extends %}
{{ "{% extends '::base.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block body -%}" }}
    <h1>{{ entity }}</h1>

    <table class="record_properties">
        <tbody>
        {{ '{% for propertyName, propertyValue in data %}' }}
            <tr>
                <td>{{ '{{ propertyName }}' }} </td>
                {{ '{% if propertyValue.timestamp is defined %}' }}
                <td>{{ '{{ propertyValue|date("d/m/Y") }}' }}</td>
                {{ '{% else %}' }}
                <td>{{ '{{ propertyValue }}' }}</td>
                {{ '{% endif %}' }}
            </tr>
        {{ '{% endfor %}' }}
        </tbody>
    </table>

    {% set hide_edit, hide_delete = false, false %}
    {% include 'crud/views/others/record_actions.html.twig.twig' %}
{{ "{% endblock %}" }}
{% endblock body %}
